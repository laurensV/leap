{% extends 'SmirikQuizBundle::layout.html.twig' %}

{% block title %}{{ 'quiz.prefinal.page_title'|trans }}{% endblock %}

{% block header %}
<h1>{{ 'quiz.prefinal.page_title'|trans }} <small>{{ 'quiz.prefinal.title.comment'|trans }}</small></h1>
{% endblock %}

{% block body %}

<div class="prefinal_note">{{ 'quiz.prefinal.note'|trans }}</div>

<a href="{{ path('smirik_quiz_go', {'uq_id': user_quiz.id, 'number': user_quiz.quiz.numquestions-1 }) }}" class="btn">{{ 'quiz.prefinal.back'|trans }}</a>
<a href="{{ path('smirik_quiz_final', {'user_quiz_id': user_quiz.id }) }}" class="btn primary">{{ 'quiz.prefinal.finish'|trans }}</a>


{% endblock %}