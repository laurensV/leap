{% extends 'SmirikQuizBundle:Admin:layout.html.twig' %}

<h1>Question</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Quiz_id</th>
            <td>{{ entity.quizid }}</td>
        </tr>
        <tr>
            <th>Text</th>
            <td>{{ entity.text }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>File</th>
            <td>{{ entity.file }}</td>
        </tr>
        <tr>
            <th>Num_answers</th>
            <td>{{ entity.numanswers }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('smirik_quiz_admin_questions') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('smirik_quiz_admin_questions_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('smirik_quiz_admin_questions_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
