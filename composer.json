{
    "name": "variable/leap",
    "description": "leap is an open source PHP framework.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Leap\\":"src/"
        }
    },
    "require": {
        "davidbarratt/custom-installer": "1.0.*@dev",
        "wikimedia/composer-merge-plugin": "dev-master",
        "variable/leap-core": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../leap-core"
        },
        {
            "type": "path",
            "url": "../leap-container"
        }
//        {
//            "type": "path",
//            "url": "../leap-router"
//        }
    ],
    "extra": {
        "custom-installer": {
            "core/": ["type:leap-core"],
            "plugins/{$name}/": ["type:leap-plugin"]
        },
        "merge-plugin": {
            "include": [
                "plugins/*/composer.json"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*"
    }
}
